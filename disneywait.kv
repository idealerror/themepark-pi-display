#:kivy 2.0

# Disney Wait Time Display - KV Layout File
# This file provides additional layout and styling definitions

<NavButton>:
    canvas.before:
        Color:
            rgba: (0.2, 0.5, 0.7, 1) if self.is_active else (0.1, 0.3, 0.5, 0.8)
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [8]
    
    font_size: '16sp'
    bold: True
    color: (1, 1, 1, 1) if self.is_active else (0.8, 0.9, 1, 1)


<StarWidget>:
    canvas:
        Color:
            rgba: self.star_color
        Ellipse:
            pos: self.center[0] - self.width/4, self.center[1] - self.height/4
            size: self.width/2, self.height/2


<HomeScreen>:
    FloatLayout:
        canvas.before:
            Color:
                rgba: 0.0, 0.4, 0.85, 1
            Rectangle:
                pos: self.pos
                size: self.size
        
        Label:
            text: "HOME"
            font_size: '32sp'
            bold: True
            center: root.center


<ResortScreen>:
    FloatLayout:
        canvas.before:
            Color:
                rgba: 0.0, 0.35, 0.75, 1
            Rectangle:
                pos: self.pos
                size: self.size
        
        Label:
            text: "RESORT INFO"
            font_size: '32sp'
            bold: True
            center: root.center


<VacationScreen>:
    FloatLayout:
        canvas.before:
            Color:
                rgba: 0.0, 0.45, 0.8, 1
            Rectangle:
                pos: self.pos
                size: self.size
        
        Label:
            text: "VACATION PLANNER"
            font_size: '32sp'
            bold: True
            center: root.center
